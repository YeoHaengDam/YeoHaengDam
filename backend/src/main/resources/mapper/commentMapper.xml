<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.yeohaengdam.comment.mapper.CommentMapper">

    <resultMap id="create" type="Comment">
        <result column="user_id" property="userId"></result>
        <result column="article_id" property="articleId"></result>
        <result column="content" property="content"></result>
    </resultMap>

    <insert id="create">
        insert into comment(user_id, article_id, content, created_at)
        values(#{userId}, #{articleId}, #{content}, now())
    </insert>
</mapper>