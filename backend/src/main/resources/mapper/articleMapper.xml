<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.yeohaengdam.article.mapper.ArticleMapper">

    <resultMap id="articleList" type="com.ssafy.yeohaengdam.article.dto.ArticleData$ArticleInfo">
        <id column="article_id" property="articleId"/>
        <result column="user_id" property="userId"/>
        <result column="user_nickname" property="nickname"/>
        <result column="title" property="title"/>
        <result column="content" property="content"/>
        <result column="hit" property="hit"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
        <collection property="imageUrls" ofType="java.lang.String">
            <result column="image_url" property="url"/>
        </collection>
    </resultMap>

    <resultMap id="detail" type="com.ssafy.yeohaengdam.article.dto.ArticleData$Detail">
        <id column="article_id" property="articleId"/>
        <result column="user_id" property="userId"/>
        <result column="user_nickname" property="nickname"/>
        <result column="title" property="title"/>
        <result column="content" property="content"/>
        <result column="hit" property="hit"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
        <collection property="imageUrls" ofType="java.lang.String">
            <result column="image_url" property="url"/>
        </collection>

        <collection property="comments" ofType="com.ssafy.yeohaengdam.comment.dto.CommentData$Detail">
            <id column="comment_id" property="commentId"/>
            <result column="article_id" property="articleId"/>
            <result column="user_id" property="userId"/>
            <result column="content" property="content"/>
            <result column="created_at" property="createdAt"/>
            <result column="updated_at" property="updatedAt"/>
        </collection>
    </resultMap>

    <select id="list" resultMap="articleList">
        SELECT article.article_id,
               article.user_id,
               users.nickname AS user_nickname,
               article.title,
               article.content,
               article.hit,
               article.created_at,
               article.updated_at,
               article_image.image_url
        FROM article
                 LEFT JOIN users ON article.user_id = users.user_id
                 LEFT JOIN article_image ON article.article_id = article_image.article_id
        <where>
            <if test="keyword != null and keyword != ''">
                AND article.title LIKE CONCAT('%', #{keyword}, '%')
            </if>
        </where>
        ORDER BY
        <if test="sortBy != null and sortBy != ''">
            ${sortBy}
        </if>
        <if test="sortBy == null or sortBy == ''">
            article.created_at DESC
        </if>
        LIMIT #{start}, #{size}
    </select>

    <select id = "findById" resultMap="detail">

        SELECT article.article_id,
               article.user_id,
               users.nickname AS user_nickname,
               article.title,
               article.content,
               article.hit,
               article.created_at,
               article.updated_at,
               article_image.image_url
        FROM article
            LEFT JOIN users ON article.user_id = users.user_id
            LEFT JOIN article_image ON article.article_id = article_image.article_id
        where article.article_id = #{articleId}
    </select>


    <insert id="create" parameterType="Article" useGeneratedKeys="true" keyProperty="articleId">
        insert into article(user_id, title, content, created_at)
        values (#{userId}, #{title}, #{content}, #{createdAt})
    </insert>

    <insert id="createImage">
        INSERT INTO article_image (url, article_id)
        VALUES (#{url}, #{articleId})
    </insert>

    <update id="update">
        update article
        set title = #{title}, content = #{content}, updated_at = now()
        where article_id = #{articleId}
    </update>

    <delete id="deleteImage">
        delete from article_image
        where article_id = #{articleId}
    </delete>

    <delete id="delete">
        delete from article
        where article_id = #{articleId}
    </delete>

    <update id="updateHit">
        update article
        set hit = hit+1
        where article_id = #{articleId}
    </update>


</mapper>