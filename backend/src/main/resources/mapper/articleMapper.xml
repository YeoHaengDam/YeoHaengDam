<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.yeohaengdam.article.mapper.ArticleMapper">

    <resultMap id="ArticleWithImages" type="com.ssafy.yeohaengdam.article.dto.ArticleData$ArticleInfo">
        <id column="article_id" property="articleId"/>
        <result column="user_id" property="userId"/>
        <result column="user_nickname" property="nickname"/>
        <result column="title" property="title"/>
        <result column="content" property="content"/>
        <result column="hit" property="hit"/>
        <result column="create_at" property="createdAt"/>
        <result column="update_at" property="updatedAt"/>
        <collection property="imageUrls" ofType="java.lang.String">
            <result column="image_url" property="url"/>
        </collection>
    </resultMap>

    <select id="findAll" resultMap="ArticleWithImages">
        SELECT article.article_id,
               article.user_id,
               users.nickname AS user_nickname,
               article.title,
               article.content,
               article.hit,
               article.create_at,
               article.update_at,
               article_image.image_url
        FROM article
                 LEFT JOIN users ON article.user_id = users.user_id
                 LEFT JOIN article_image ON article.article_id = article_image.article_id
        ORDER BY article.article_id DESC;
    </select>

    <insert id="create" parameterType="Article">
        insert into article(user_id, title, content, create_at)
        values (#{userId}, #{title}, #{content}, #{createAt})
    </insert>

</mapper>